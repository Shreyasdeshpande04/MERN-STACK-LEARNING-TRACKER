  <%- include('footer') %>

  <script>
    // Clipboard copy
    function copyToClipboard(link) {
      navigator.clipboard.writeText(link)
        .then(() => alert("ðŸ”— Link copied to clipboard!"))
        .catch(err => alert("Failed to copy: " + err));
    }

    // Read More / Read Less toggle
    document.addEventListener('DOMContentLoaded', () => {
      document.querySelectorAll('.description-text').forEach(descDiv => {
        const lineHeight = parseFloat(getComputedStyle(descDiv).lineHeight);
        const twoLineHeight = lineHeight * 2; // Calculate height for 2 lines

        // Temporarily remove overflow and max-height to get the true scrollHeight
        descDiv.style.overflow = 'visible';
        descDiv.style.maxHeight = 'none';

        // Check if the content actually overflows 2 lines
        if (descDiv.scrollHeight > twoLineHeight) {
          // If it overflows, set the max-height to 2 lines and show the button
          descDiv.style.maxHeight = twoLineHeight + 'px';
          descDiv.style.overflow = 'hidden';

          const readMoreBtn = descDiv.nextElementSibling; // Get the associated button
          if (readMoreBtn && readMoreBtn.classList.contains('read-more-btn')) {
            readMoreBtn.style.display = 'inline-block'; // Make the button visible
          }
        } else {
          // If it doesn't overflow, ensure no max-height is set and overflow is not hidden
          descDiv.style.maxHeight = 'none';
          descDiv.style.overflow = 'visible';
        }
      });

      document.querySelectorAll('.read-more-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          const targetId = btn.getAttribute('data-target');
          const descDiv = document.getElementById(targetId);

          if (!descDiv) return;

          if (btn.textContent === 'Read More') {
            // Expand: show full text
            descDiv.style.maxHeight = 'none'; // Remove max-height constraint
            descDiv.style.overflow = 'visible'; // Allow content to be visible
            btn.textContent = 'Read Less';
          } else {
            // Collapse: limit text to 2 lines
            const lineHeight = parseFloat(getComputedStyle(descDiv).lineHeight);
            descDiv.style.maxHeight = (lineHeight * 2) + 'px'; // Set back to 2 lines
            descDiv.style.overflow = 'hidden'; // Hide overflow
            btn.textContent = 'Read More';
          }
        });
      });
    });
  </script>
