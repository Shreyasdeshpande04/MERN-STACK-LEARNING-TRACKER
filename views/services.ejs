      height: 70px;
      margin: 0 auto 15px;
      display: block;
    }

    .card h4 {
      font-size: 22px;
      font-weight: normal;
      margin-bottom: 10px;
    }

    .card p {
      font-size: 20px;
      line-height: 1.6;
      font-weight: normal; /* added to override <b> */
    }

    @media (max-width: 768px) {
